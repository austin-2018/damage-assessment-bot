{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [ "./*" ],
      "@common/*": [ "../../common/src/*" ]
    },
    "lib": [
       "esnext"
     ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "usePrecompiledFiles": true,
    "useWebpackText": true
  },
  "references": [
      { "path": "../common" }
  ]
}
